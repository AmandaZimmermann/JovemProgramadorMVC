        <input type="text" asp-for="Nome" class="form-control col-md-1">
    </div>

    <div class="text-left">
        <button type="submit" class="btn btn-primary col-1">Buscar</button>
    </div>
</form>
<form asp-controller="Aluno" asp-action="Index" method="post">
