        <label for="idade" class="form-label">Idade</label>
        <div class="d-flex">
            <input type="text" asp-for="Idade" class="form-control col-md-1 mr-3">
            <select asp-for="Operacao" class="form-select" aria-label="Default select example">
                <option selected>Selecione uma opção</option>
